<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_launch"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:src="@drawable/logo_max" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="v1.0"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_25"
            android:text="[轻巧记账]简约而不简单的记账软件\n
"
            android:textColor="@color/secondary_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:text="关注公众号"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="获取最新版本，了解最新版本动态"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:adjustViewBounds="true"
            android:contentDescription="微信搜一搜：小泽干货铺"
            android:src="@drawable/ic_wechat" />

        <com.xz.ska.custom.IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/dp_5"
            android:text="如何关注公众号？"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_16"
            app:icon_src="@drawable/ic_tips" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="方法1：微信搜索[小泽干货铺]"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="方法2：截图保存二维码图片，然后打开微信扫一扫，通过相册识别二维码即可。"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_50"
            android:clickable="true"
            android:focusable="true"
            android:text="点击跳转到微信>>>"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/sp_22" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="©2021 Xzlyf Studio.All rights reserved."
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>