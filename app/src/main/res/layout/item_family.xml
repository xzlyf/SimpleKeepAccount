<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:minHeight="@dimen/dp_200"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/dp_2"
    app:cardCornerRadius="@dimen/dp_20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/dp_20"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Group
            android:id="@+id/top_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_icon,tv_name" />

        <ImageView
            android:id="@+id/tv_icon"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#EEC5C5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:text="轻巧记账"
            android:textSize="@dimen/sp_20"
            app:layout_constraintBottom_toBottomOf="@+id/tv_icon"
            app:layout_constraintLeft_toRightOf="@+id/tv_icon"
            app:layout_constraintTop_toTopOf="@+id/tv_icon" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:text="因崔斯特因崔斯特因崔斯特因崔斯特因崔斯特因崔斯特因崔斯特因崔斯特因崔斯特因崔斯特因崔斯特因崔斯特"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_icon" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>